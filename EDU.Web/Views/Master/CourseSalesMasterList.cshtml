@using System.Globalization;
@model IEnumerable<EZY.EDU.Contract.CourseSalesMasterViewModel>
@{
    ViewBag.Title = "CourseSalesMasterList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section seccss{
    <link href="@Url.Content("~/Css/dataTables.bootstrap.css")" rel="stylesheet" />
    <link href="@Url.Content("~/Css/dataTables.responsive.css")" rel="stylesheet" />
}
@functions {
    public string GetMonthById(int id)
    {
        var monthData = DateTimeFormatInfo.CurrentInfo.MonthNames.ToList();

        var month = monthData[id - 1];
        return month;
    }
}
<section class="content">
    <div class="box box-dnex">
        <div class="box-header with-border">
            <div class="row">
                <section class="content-header">
                    <ol class="breadcrumb">
                        <li><a href='@Url.Content("~/Home/education")'><i class="fa fa-dashboard"></i> Home</a></li>
                        <li class="active">Regonal Leads List</li>
                    </ol>
                </section>
            </div>
            <div class="box-tools">
                @if (Session["UserID"].ToString().ToUpper() == "ADMIN")
                {
                    <button class="btn btn-default btn-sm" type="button" onclick="location.href = '@Url.Content("~/Master/CourseSalesMaster?Id=-1")'"><i class="fa fa-plus"></i>&nbsp;Add New Regonal Lead</button>
                }
            </div>
        </div>
        <div class="box-body">
            <div class="row" style="margin-top:10px;">
                <div class="col-md-12">
                    <table class="table table-striped" id="tblCourseSalesMaster">
                        <thead>
                            <tr>
                                <th>Country</th>
                                <th>Product</th>
                                <th>Course</th>
                                <th style="text-align:center">No Of Days</th>
                                <th>Month</th>
                                <th style="text-align:center">Start Dt</th>
                                <th style="text-align:center">End Dt</th>
                                <th style="text-align:center">Min. Reg</th>
                                <th style="text-align:center">Lead On Head</th>
                                <th style="text-align:center">Registered</th>
                                <th style="text-align:center">Avl. Seats</th>
                                <th style="text-align:center">Reg. Closing Dt</th>
                                @if (Session["UserID"].ToString().ToUpper() == "ADMIN")
                                {
                                    <th>#Action</th>
                                }
                            </tr>
                        </thead>
                        <tbody>
                            @for (var i = 0; i < Model.Count(); i++)
                            {
                                <tr>
                                    <td>@Model.ElementAt(i).CountryName</td>
                                    <td>@Model.ElementAt(i).ProductName</td>
                                    <td>@Model.ElementAt(i).CourseName</td>
                                    <td align="center">@Model.ElementAt(i).NoOfDays</td>
                                    <td>@GetMonthById(Model.ElementAt(i).Month + 1)</td>
                                    <td align="center">@Model.ElementAt(i).StartDate.ToString("dd/MM/yyyy")</td>
                                    <td align="center">@Model.ElementAt(i).EndDate.ToString("dd/MM/yyyy")</td>
                                    <td align="center">@Model.ElementAt(i).MinimumReg</td>
                                    <td align="center">
                                        <span data-toggle="tooltip" title="@Model.ElementAt(i).LeadsOnHeadRemarks">@Model.ElementAt(i).LeadsOnHead</span>
                                    </td>
                                    <td align="center">
                                        <span data-toggle="tooltip" title="@Model.ElementAt(i).RegisteredRemarks">@Model.ElementAt(i).Registered</span>
                                    </td>
                                    <td align="center">@Model.ElementAt(i).AvailableSeats</td>
                                    <td align="center">@Model.ElementAt(i).RegClosingDate.ToString("dd/MM/yyyy")</td>
                                    @if (Session["UserID"].ToString().ToUpper() == "ADMIN")
                                    {
                                        <td>
                                        <button class="btn btn-primary btn-sm" onclick="location.href = '@Url.Content("~/Master/CourseSalesMaster?Id=" + Model.ElementAt(i).Id)'"><i class="fa fa-pencil-square-o"></i>&nbsp;Edit</button>
                                        @*<button class="btn btn-danger btn-sm" onclick="DeleteProductCategory(@Model[i].LookupID)"><i class="fa fa-trash-o"></i>&nbsp;Delete</button>*@
                                    </td>
                                    }
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div class="box-footer">
            <div class="row">
                <div class="col-md-12">
                    <button class="btn btn-default btn-sm pull-right" type="button" onclick="location.href = '@Url.Content("~/Home/Education")'"><i class="fa fa-backward"></i>&nbsp;Back</button>
                </div>

            </div>
        </div>
    </div>
</section>
@section secscripts{
    <script src="@Url.Content("~/Scripts/jquery.dataTables.js")"></script>
    <script src="@Url.Content("~/Scripts/dataTables.bootstrap.js")"></script>
    <script type="text/javascript">
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();

            $('#tblCourseSalesMaster').DataTable({
                responsive: true
            });
        });
    </script>
}

