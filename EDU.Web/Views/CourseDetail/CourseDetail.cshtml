@model EDU.Web.ViewModels.CourseDetail.CourseDetailVm
@{
    ViewBag.Title = "CourseDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section seccss{
    @*<link href="@Url.Content("~/Css/datepicker3.css")" rel="stylesheet" />
        <link href="@Url.Content("~/Css/bootstrap-timepicker.css")" rel="stylesheet" />*@
   <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datetimepicker/4.17.47/css/bootstrap-datetimepicker.css" rel="stylesheet">
}

@using (Html.BeginForm("SaveCourseDetail", "CourseDetail", FormMethod.Post, new { id = "frmCourseDetail", name = "frmCourseDetail" }))
{
    <section class="content">
        <div class="box box-dnex">
            <div class="box-header with-border">
                <h3 class="box-title"><i class="fa fa-product-hunt" aria-hidden="true"></i>&nbsp;Course Detail</h3>
            </div>
            <div class="box-body">
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Country</label>
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(x => x.courseDetail.Country,
                         new SelectList(Model.countryList, "CountryCode", "CountryName"),
                         "Select Country",
                         new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Month</label>
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(x => x.courseDetail.Month,
                            new SelectList(Model.MonthData, "Value", "Name"),
                            "Select Month",
                            new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Start Date</label>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <div class="input-group date" id="StartDt">
                                @Html.TextBoxFor(x => x.courseDetail.StartDate,
                                new { @class = "form-control input-sm dtCss" })
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">End Date</label>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <div class="input-group date" id="EndDt">
                                @Html.TextBoxFor(x => x.courseDetail.EndDate,
                                new { @class = "form-control input-sm dtCss" })
                                <span class="input-group-addon">
                                    <span class="fa fa-calendar"></span>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Customer Name</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.CustomerName,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Product</label>
                    </div>
                    <div class="col-md-2">
                        @Html.DropDownListFor(x => x.courseDetail.Product,
                        new SelectList(Model.EduProductData, "Id", "ProductName"),
                        "Select Product",
                        new { @class = "form-control input-sm", onchange = "ProductChange(this);" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Course</label>
                    </div>
                    <div class="col-md-2">
                        @if (Model.courseDetail.Course == -1)
                        {
                        @Html.DropDownListFor(x => x.courseDetail.Course,
                            Enumerable.Empty<SelectListItem>(),
                            "Select Course",
                            new { @class = "form-control input-sm", disabled = "disabled" })
                        }
                        else
                        {
                        @Html.DropDownListFor(x => x.courseDetail.Course,
                            new SelectList(Model.CourseData, "Id", "CourseName"),
                            "Select Course",
                            new { @class = "form-control input-sm" })
                        }

                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Days</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Days,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">No Pax</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.NoPax,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Delivered By</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.DeliveredBy,
                        new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Lab Rental</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.LabRental,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Sales Revenue</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.SalesRev,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Trainer Name</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.TrainerName,
                        new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Airfare</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Airfare,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Hotel</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Hotel,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Trainer Fee</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.TrainerFee,
                        new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">MISC Local</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.MISCLocal,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Regional Expenses</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.RegionalExpenses,
                        new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Course Material</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.CourseMaterial,
                        new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Total Expenses</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.TotalExp,
                    new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Profit</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Profit,
                    new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Percentage</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Percentage,
                    new { @class = "form-control input-sm" })
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-md-2">
                        <label class="control-label pull-right">Region Invoice</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.RegionInvoice,
                    new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Payment Status</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.PaymentStatus,
                    new { @class = "form-control input-sm" })
                    </div>
                    <div class="col-md-2">
                        <label class="control-label pull-right">Particulars</label>
                    </div>
                    <div class="col-md-2">
                        @Html.TextBoxFor(x => x.courseDetail.Particulars,
                        new { @class = "form-control input-sm" })
                    </div>
                </div>
            </div>
            <div class="box-footer">
                <div class="row">
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-primary btn-sm"><i class="fa fa-floppy-o"></i>&nbsp;Save</button>
                        <button class="btn btn-default btn-sm" type="button" onclick="location.href = '@Url.Content("~/CourseDetail/List")'"><i class="fa fa-backward"></i>&nbsp;Back</button>
                    </div>
                    
                </div>
            </div>
        </div>
    </section>
}

@section secscripts {
    <script src="@Url.Content("~/Scripts/moment.min.js")"></script>
    <script src="@Url.Content("~/Scripts/bootstrap-datetimepicker.js")"></script>
    <script type="text/javascript">
        $(function () {
            $('#StartDt').datetimepicker({
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-arrow-up',
                    down: 'fa fa-arrow-down'
                },
                format: 'DD/MM/YYYY'
            });
            $('#EndDt').datetimepicker({
                useCurrent: false, //Important! See issue #1075
                icons: {
                    time: 'fa fa-clock-o',
                    date: 'fa fa-calendar',
                    up: 'fa fa-arrow-up',
                    down: 'fa fa-arrow-down'
                },
                format: 'DD/MM/YYYY'
            });
            $("#StartDt").on("dp.change", function (e) {
                $('#EndDt').data("DateTimePicker").minDate(e.date);
            });
            $("#EndDt").on("dp.change", function (e) {
                $('#StartDt').data("DateTimePicker").maxDate(e.date);
            });
        });

        function ProductChange(el) {
            debugger;
            $.ajax({
                url: '@Url.Content("~/CourseDetail/GetCoursesByProduct?Id=")' + el.value,
                  method: 'GET',
                  contentType: 'application/json',
                  success: function (data) {
                      $('#courseDetail_Course').empty();
                      $.each(data, function (key, value) {
                          $('#courseDetail_Course').append($('<option></option>').val(value.Id).html(value.CourseName));
                      });
                      $('#courseDetail_Course').removeAttr('disabled');
                  },
                  error: function (err) {


                  }
              });
        }
    </script>
}
