    <script type="text/javascript">
        Highcharts.createElement('link', {
            href: 'https://fonts.googleapis.com/css?family=Dosis:400,600',
            rel: 'stylesheet',
            type: 'text/css'
        }, null, document.getElementsByTagName('head')[0]);

        Highcharts.theme = {
            colors: ['#00FFFF', '#0000FF', '#8A2BE2', '#1E90FF', '#DC143C', '#B8860B',
               '#FF0000', '#FFFF00', '#00FF7F', '#EE82EE', '#4169E1'],
            chart: {
                backgroundColor: null,
                style: {
                    fontFamily: 'Dosis, sans-serif'
                }
            },
            title: {
                style: {
                    fontSize: '16px',
                    fontWeight: 'bold',
                    textTransform: 'uppercase'
                }
            },
            tooltip: {
                borderWidth: 0,
                shadow: true,
                backgroundColor: '#FFFFFF',
                style: {
                    fontSize: '16px',
                    fontWeight: 'bold'
                }

            },
            legend: {
                itemStyle: {
                    fontWeight: 'bold',
                    fontSize: '13px'
                }
            },
            xAxis: {
                labels: {
                    style: {
                        fontSize: '15px',
                        fontWeight: 'bold'
                    }
                }
            },
            yAxis: {
                title: {
                    style: {
                        fontSize: '18px',
                        fontWeight: 'bold',
                    }
                },
                labels: {
                    style: {
                        fontSize: '13px',
                        fontWeight: 'bold'
                    }
                }
            },
            plotOptions: {
                candlestick: {
                    lineColor: '#404048'
                }
            },


            // General
            background2: '#F0F0EA'

        };

        // Apply the theme
        Highcharts.setOptions(Highcharts.theme);
        var chart = Highcharts.chart('MaterialInward', {

            title: {
                text: 'Chart.update'
            },
            xAxis: {
                categories: [@Html.Raw(strInwardMonth)]
            },
            plotOptions: {
                candlestick: {
                    lineColor: '#404048'
                }
            },

            series: [{
                type: 'column',
                colorByPoint: true,
                data: [@Html.Raw(strInwardInvoice)],
                showInLegend: false,
                name: 'Material Inward Receipt'
            }]

        });
        var chart = Highcharts.chart('MaterialOutward', {

            title: {
                text: 'Chart.update'
            },
            xAxis: {
                categories: [@Html.Raw(strOutwardMonth)]
            },

            series: [{
                type: 'column',
                colorByPoint: true,
                data: [@Html.Raw(strOutwardInvoice)],
                showInLegend: false,
                name: 'Material Outward Receipt'
            }]

        });
        var chart = Highcharts.chart('RMAValidation', {

            title: {
                text: 'Chart.update'
            },
            xAxis: {
                categories: [@Html.Raw(strRMAInwardMonth)]
            },

            series: [{
                type: 'column',
                colorByPoint: true,
                data: [@Html.Raw(strRMAInwardInvoice)],
                showInLegend: false,
                name: 'RMA Generated Receipt'
            }]

        });
        var chart = Highcharts.chart('RMAReturn', {

            title: {
                text: 'Chart.update'
            },
            xAxis: {
                categories: [@Html.Raw(strRMAOutwardMonth)]
            },

            series: [{
                type: 'column',
                colorByPoint: true,
                data: [@Html.Raw(strRMAOutwardInvoice)],
                showInLegend: false,
                name: 'RMA Return Receipt'
            }]

        });
        Highcharts.chart('MaterialInwardOutward', {
            data: {
                table: 'datatable'
            },
            chart: {
                type: 'column'
            },
            title: {
                text: 'Data extracted from a HTML table in the page'
            },
            yAxis: {
                allowDecimals: false,
                title: {
                    text: 'Units'
                }
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/>' +
                        this.point.y + ' ' + this.point.name.toLowerCase();
                }
            }
        });
        Highcharts.chart('RMAMaterialInwardOutward', {
            data: {
                table: 'datatable1'
            },
            chart: {
                type: 'column'
            },
            title: {
                text: 'Data extracted from a HTML table in the page'
            },
            yAxis: {
                allowDecimals: false,
                title: {
                    text: 'Units'
                }
            },
            tooltip: {
                formatter: function () {
                    return '<b>' + this.series.name + '</b><br/>' +
                        this.point.y + ' ' + this.point.name.toLowerCase();
                }
            }
        });
    </script>

